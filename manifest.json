{
    "name": "DnD Coin Calculator",
    "desricption": "Helps you calculator your coins in DnD",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "./images/gold.png",
            "32": "./images/gold.png",
            "48": "./images/gold.png"
        }
    },
    "permissions": [
        "storage"
    ]
}